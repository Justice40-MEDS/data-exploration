library(here)
library(tidyverse)
dem <- read_csv(here("demographics", "dem_melted.csv"))
View(dem)
ggplot(dem, aes(x = racial_group, y = total_burdens, group = racial_group)) +
geom_boxplot()
ggplot(dem, aes(x = racial_group, y = total_burdens, group = racial_group)) +
geom_boxplot(aes(group = state))
ggplot(dem, aes(x = racial_group, y = total_burdens, group = racial_group)) +
geom_boxplot(aes(group = racial_group))
ggplot(dem, aes(x = racial_group, y = total_burdens, group = racial_group)) +
geom_boxplot(aes(group = racial_group, color = racial_group, fill = racial_group))
ggplot(dem, aes(x = percentage,
y = total_burdens,
color = racial_group)) +
geom_point(alpha = 0.4, size = 2)
ggplot(dem, aes(x = total_burdens, y = percentage, color = racial_group)) +
geom_col(alpha = 0.4, size = 2)
?geom_col
ggplot(dem, aes(x = total_burdens, y = percentage, fill = racial_group)) +
geom_col(alpha = 0.4, size = 2, position = "stack")
ggplot(dem, aes(x = total_burdens, y = percentage, fill = racial_group)) +
geom_col(size = 2, position = "dodge")
ggplot(dem, aes(x = total_burdens, y = percentage, fill = racial_group)) +
geom_col(size = 2, position = "fill")
